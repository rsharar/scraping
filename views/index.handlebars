</nav>


{{!-- New quotes button --}}
<div class="container btn-container text-center">
  <button type="button" class="btn btn-primary" id="new-quotes-btn">Find me some inspirational quotes!</button>
</div>

{{!-- Quotes --}}
<div class="container quote-container">
  <section id="quote-body">
    <div class="container">
      <ul class="quotes" id="quotes-list">
        {{> quotes}}
      </ul>
    </div>
  </section>
</div>

{{!-- Comments Modal --}}
<div class="modal fade in" id="quoteModal" tabindex="-1" role="dialog" aria-labelledby="quoteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="quoteModalLabel">Comments</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="comments"></p>
        <textarea id="comment" rows="5" cols="55" placeholder="Enter a comment."></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-primary btn-sm add" id="save-comment-btn">Save Comment</button>
      </div>
    </div>
  </div>
</div>


